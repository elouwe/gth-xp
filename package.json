{
  "name": "gotham-xp-contract",
  "version": "0.0.2",
  "scripts": {
    "init-db": "ts-node scripts/init-db.ts",
    "build": "ts-node scripts/compile.ts",
    "test": "jest --config jest.config.js",
    "pretest": "npm run build",
    "deploy": "ts-node scripts/deploy.ts",
    "add-xp": "ts-node scripts/add-xp.ts",
    "get-xp": "ts-node scripts/get-xp.ts",
    "wallet-verifier": "ts-node scripts/wallet-verifier.ts",
    "get-history": "ts-node scripts/get-history.ts",
    "create-wallets": "ts-node scripts/create-wallets.ts",
    "generate-users": "ts-node scripts/generate-users-only.ts",
    "upgrade:testnet": "WALLET_MNEMONIC=$(node -pe \"require('./wallets.json').owner.mnemonic\") WALLET_VERSION=v4r2 npx blueprint run upgrade --testnet --mnemonic",
    "deploy:testnet": "WALLET_MNEMONIC=$(node -pe \"require('./wallets.json').owner.mnemonic\") WALLET_VERSION=v4r2 npx blueprint run deploy --testnet --mnemonic",
    "add-xp:testnet": "WALLET_MNEMONIC=$(node -pe \"require('./wallets.json').owner.mnemonic\") WALLET_VERSION=v4r2 npx blueprint run add-xp --testnet --mnemonic",
    "compile:testnet": "WALLET_MNEMONIC=$(node -pe \"require('./wallets.json').owner.mnemonic\") WALLET_VERSION=v4r2 npx blueprint run compile --testnet --mnemonic",
    "generate-user": "ts-node scripts/generate-user.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/data-source.ts",
    "db:drop": "typeorm schema:drop -d src/data-source.ts",
    "db:migrate": "typeorm migration:run -d src/data-source.ts",
    "db:reset": "npm run db:drop && npm run db:migrate"
  },
  "devDependencies": {
    "@tact-lang/compiler": "^1.6.13",
    "@ton-community/func-js": "^0.10.0",
    "@ton/blueprint": "^0.38.0",
    "@ton/core": "^0.61.0",
    "@ton/crypto": "^3.3.0",
    "@ton/sandbox": "^0.35.1",
    "@ton/test-utils": "^0.9.0",
    "@ton/tolk-js": "^1.0.0",
    "@ton/ton": "^15.3.1",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0"
  }
}
